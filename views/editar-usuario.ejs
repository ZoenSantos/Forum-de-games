<!-- views/editar-usuario.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Editar Usuário</title>
</head>
<body>
    <h1>Editar Usuário</h1>
    
    <form action="/admin/editar-usuario/<%= user._id %>" method="POST">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= user.nome %>" readonly>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" readonly>

        <label for="role">Função:</label>
        <select id="role" name="role">
            <option value="usuario" <%= user.role === 'usuario' ? 'selected' : '' %>>Usuário</option>
            <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
        </select>

        <button type="submit">Salvar Alterações</button>
    </form>
    
    <a href="/dashboardAdmin">Voltar para o Dashboard Admin</a>
</body>
</html>
